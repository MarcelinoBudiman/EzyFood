<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:id="@+id/drinksLayout"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageRecyclerView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textRecyclerViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/imageRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/imageRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/imageRecyclerView" />

        <TextView
            android:id="@+id/textRecyclerViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textRecyclerViewName"
            app:layout_constraintStart_toStartOf="@+id/textRecyclerViewName"
            app:layout_constraintTop_toBottomOf="@+id/textRecyclerViewName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>